<%-contentFor('body')%>


<%-include('../includes/refresh.ejs', {position: {left: 1, bottom: 1}})%>
<div class="container">
    <%-include('../includes/error.ejs', {errors})%>
    <%-include('../includes/success.ejs', {success})%>
    <div class="row">
        <table class="table" style="text-align: right;">
            <thead>
                <tr>
                    <th></th>
                    <th>کد ملی</th>
                    <th>تعداد پاسخ ها</th>
                    <th>تنظیمات</th>
                </tr>
            </thead>
            <tbody>
                <%students.forEach(student => {%>
                    <tr>
                        <td><%=student.name%> <%=student.family%></td>
                        <td><%=helper.convertEnglishDigitsToPersian(student.nationalCode)%></td>
                        <td><%=helper.convertEnglishDigitsToPersian(student.answers.length)%></td>
                        <td>
                            <a href="#" class="btn btn-secondary">
                                مشاهده
                                
                            </a>
                        </td>
                    </tr>
                <%})%>
            </tbody>
        </table>
    </div>
</div>